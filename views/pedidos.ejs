<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Loja-virtual</title>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

</head>

<body>

    <div class="container">

        <!-- PEDIDOS CADASTRADOS -->
         <div class="row">
            <div class="col-md-12">
                <h2>Pedidos Cadastrados</h2>
                <table class="table table-bordered" id="tabela">
                    <tbody>
                        <% pedidos.forEach(function(pedido, index) {%>
                            <tr>
                                <td><strong>Nº do pedido: <%- pedido._id %></strong></td>
                                <td><a href="/admin/remove-pedido/<%- pedido._id %>">Remover</a>
                            </tr>
                            <% pedido.itens.forEach(function(item, index) {%>
                                <tr>
                                    <td><%- item.nome %></td>
                                    <td><%- item.preco %></td>
                                </tr>
                            <% }) %>    
                        <% }) %>
                    </tbody>
                </table>
                <hr>
                <a href="/admin/produtos-cadastrados">Área do administrador</a>
            </div>
        </div>
        <!-- ./PEDIDOS CADASTRADOS -->
    </div>

</body>

</html>